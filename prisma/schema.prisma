//definisi nama generator client yang di buat oleh prisma
generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma" //custom output directory for the generator
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. Model untuk Autentikasi (User)
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String 
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relasi dengan Product (User membuat Product)
  products      Product[]

  @@map("users")
}

// 2. Model Kategori
model Category {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  products  Product[] // Relasi One-to-Many: Satu Category punya banyak Product

  @@map("categories")
}

// 3. Model Tipe
model Type {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  products  Product[] // Relasi One-to-Many: Satu Type punya banyak Product

  @@map("types")
}

// 4. Model Produk (Dengan Relasi)
model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  price       Float
  stock       Int
  imageUrl    String?  // Field baru yang ditambahkan
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relasi ke Category (Many-to-One)
  categoryId  Int
  category    Category @relation(fields: [categoryId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  // Relasi ke Type (Many-to-One)
  typeId      Int
  type        Type     @relation(fields: [typeId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  // Relasi ke User (Siapa yang membuat/mengupdate)
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@map("products")
}